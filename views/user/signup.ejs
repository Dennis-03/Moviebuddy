<%- include('../partials/messages') %>
<div>
  <form action="signup" method="POST" class="register">
    <a href="/">
      <div class="logo-container">
        <img src="/img/logotrans.png" alt="" width="60px" />
      </div>
    </a>
    <div>
      <i class="fa fa-user"></i>
      <input type="text" placeholder="Name" name="name" />
    </div>
    <div>
      <i class="fa fa-envelope"></i>
      <input type="text" placeholder="Email" name="email" />
    </div>
    <div>
      <i class="fa fa-key"></i>
      <input type="password" placeholder="Password" name="password" />
    </div>
    <div>
      <i class="fa fa-key"></i>
      <input type="password" placeholder=" Re-Type Password" name="password2" />
    </div>
    <button type="submit" class="btn">Register</button>
    <p class="exist">Already having an account ? <a href="login">Signin</a></p>
  </form>
</div>
